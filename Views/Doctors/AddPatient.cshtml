@model Lab3.Models.PatientDoctor 
@{
    ViewData["Title"] = "AddPatient";
}

<h2>Sign patient to doctor:</h2>

@using (Html.BeginForm("AddPatient","Doctors"))
{
    <div class="form-group">
        @Html.DisplayNameFor(m => m.PatientId)
        @Html.DropDownListFor(m => m.PatientId,new SelectList(Model.Patients,"Id","Name"),new {@class="form-control"})
        @Html.HiddenFor(m => m.DoctorId)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Add</button>
    </div>
} 